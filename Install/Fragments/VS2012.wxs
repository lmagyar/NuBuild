<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
   <Fragment Id="VS2012">
      <!-- reference this feature from Product -->
      <Feature Id="VS2012"
               Level="9"
               Title="VS 2012 Support"
               Description="Integrates NuBuild extensions, project templates and schema files into Visual Studio 2012."
               AllowAdvertise="no" >
         <!-- turn it off, if there is no VS2012_INSTALL_DIR or VS2012_SCHEMAS_DIR specified -->
         <Condition Level="0">NOT VS2012_INSTALL_DIR OR NOT VS2012_SCHEMAS_DIR</Condition>
         <ComponentGroupRef Id="VS2012_Extensions" />
         <ComponentGroupRef Id="VS2012_Schemas"/>
      </Feature>
   </Fragment>
</Wix>