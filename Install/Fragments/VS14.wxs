<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
   <Fragment Id="VS14">
      <!-- reference this feature from Product -->
      <Feature Id="VS14"
               Level="7"
               Title="VS 2015 Support"
               Description="Integrates NuBuild extensions, project templates and schema files into Visual Studio 2015."
               AllowAdvertise="no" >
         <!-- turn it off, if there is no VS14_INSTALL_DIR or VS14_SCHEMAS_DIR specified -->
         <Condition Level="0">NOT VS14_INSTALL_DIR OR NOT VS14_SCHEMAS_DIR</Condition>
         <ComponentGroupRef Id="VS14_Extensions" />
         <ComponentGroupRef Id="VS14_Schemas"/>
      </Feature>
   </Fragment>
</Wix>